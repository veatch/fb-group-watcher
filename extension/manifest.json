{
  "manifest_version": 3,
  "name": "FB Group Watcher",
  "version": "1.0.0",
  "description": "Summarize Facebook group posts and receive email digests",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://www.facebook.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
