{
  "manifest_version": 3,
  "name": "FB Group Watcher",
  "version": "1.0.0",
  "description": "Summarize Facebook group posts and receive email digests",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["https://www.facebook.com/*"],
  "action": {
    "default_popup": "popup.html"
  }
}
